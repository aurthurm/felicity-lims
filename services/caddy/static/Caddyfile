{
	log {
		output stdout
		level DEBUG
	}
}

{$SERVER_HOST} {

	handle /beak-gql {
		reverse_proxy {$PROXY_BACKEND}:{$PROXY_PORT}
	}

	handle /api/* {
		reverse_proxy {$PROXY_BACKEND}:{$PROXY_PORT}
	}

	handle /media/* {
		reverse_proxy {$PROXY_BACKEND}:{$PROXY_PORT}
	}

	handle {
		root * /app
		try_files {path} /index.html
		encode gzip
		file_server
	}
}
